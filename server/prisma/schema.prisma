generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  FAMILY
  PROVIDER
  DRIVER
  ADMIN
}

enum BookingStatus {
  PENDING
  APPROVED
  DECLINED
  COMPLETED
}

enum ServiceType {
  SUBSCRIPTION
  ONETIME
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // For basic auth
  name      String
  role      UserRole @default(FAMILY)
  address   String?
  phone     String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings        Booking[]
  providerProfile ProviderProfile?
  driverProfile   DriverProfile?
}

model ProviderProfile {
  id     Int    @id @default(autoincrement())
  userId Int    @unique
  user   User   @relation(fields: [userId], references: [id])
  bio    String?
  rating Float  @default(0)
  
  assignedBookings Booking[]
}

model DriverProfile {
  id      Int    @id @default(autoincrement())
  userId  Int    @unique
  user    User   @relation(fields: [userId], references: [id])
  vehicle String?
  license String?
  
  assignedBookings Booking[]
}

model Service {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  price       Decimal
  type        ServiceType
  features    String[] // Stored as JSON or array depending on DB support, using string array for simplicity in Postgres
  
  bookings    Booking[]
}

model Booking {
  id        Int           @id @default(autoincrement())
  userId    Int
  user      User          @relation(fields: [userId], references: [id])
  serviceId Int
  service   Service       @relation(fields: [serviceId], references: [id])
  providerId Int?
  provider  ProviderProfile? @relation(fields: [providerId], references: [id])
  driverId   Int?
  driver     DriverProfile?   @relation(fields: [driverId], references: [id])
  
  status    BookingStatus @default(PENDING)
  date      DateTime
  notes     String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
